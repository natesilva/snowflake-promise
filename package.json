{
  "name": "snowflake-promise",
  "version": "4.5.0",
  "description": "A Promise-based, TypeScript-friendly wrapper for the Snowflake SDK",
  "repository": "github:natesilva/snowflake-promise",
  "bugs": "https://github.com/natesilva/snowflake-promise/issues",
  "license": "MIT",
  "author": "Nate Silva <nate@natesilva.com>",
  "keywords": [
    "snowflake",
    "database",
    "data warehouse",
    "warehouse",
    "promise",
    "typescript"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/src/index.d.ts",
        "default": "./dist/esm/src/index.js"
      },
      "require": {
        "types": "./dist/cjs/src/index.d.ts",
        "default": "./dist/cjs/src/index.js"
      }
    }
  },
  "scripts": {
    "clean": "del-cli dist",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18.20.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^18.19.80",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "del-cli": "^6.0.0",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  },
  "volta": {
    "node": "18.20.7"
  },
  "dependencies": {
    "snowflake-sdk": "^2",
    "type-fest": "^4.37.0"
  }
}
