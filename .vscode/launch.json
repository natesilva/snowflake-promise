  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/src/app.ts",
      "cwd": "${workspaceRoot}",
      "outFiles": [ "${workspaceRoot}/prod/**/*.js" ],
      "sourceMaps": true,
      "preLaunchTask": "build"
    },
    {
      "name": "Launch test.ts",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/src/test.ts",
      "cwd": "${workspaceRoot}",
      "outFiles": [ "${workspaceRoot}/prod/**/*.js" ],
      "sourceMaps": true,
      "preLaunchTask": "build"
    }
  ]
}
